import javax.swing.JOptionPane;

public class MathSolver {
    public static void main(String[] args) {
        // Prompt the user to enter a math equation/problem
        String equation = JOptionPane.showInputDialog("Enter a math equation (e.g., 2 + 2, 3 * 4):");
        
        // Calculate the result
        double result = evaluate(equation);
        
        // Display the result
        JOptionPane.showMessageDialog(null, "The answer is: " + result);
    }

    // A simple method to evaluate basic math expressions
    public static double evaluate(String equation) {
        // Split the equation into parts
        String[] parts = equation.split(" ");
        double num1 = Double.parseDouble(parts[0]);
        String operator = parts[1];
        double num2 = Double.parseDouble(parts[2]);
        double result = 0;
        
        // Perform the operation
        switch (operator) {
            case "+":
                result = num1 + num2;
                break;
            case "-":
                result = num1 - num2;
                break;
            case "*":
                result = num1 * num2;
                break;
            case "/":
                result = num1 / num2;
                break;
            default:
                JOptionPane.showMessageDialog(null, "Invalid operator. Please use +, -, *, or /.");
                System.exit(1);
        }
        
        return result;
    }
}
