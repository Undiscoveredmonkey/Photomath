// Function to scan the screen for math problems and solve them
function scanAndSolveMathProblems(screenContent) {
    let answers = []; // Array to store the answers

    try {
        // Regular expression to match math problems
        let mathProblemRegex = /[0-9+\-*/.]+/g;

        // Find all math problems in the screen content
        let mathProblems = screenContent.match(mathProblemRegex);

        if (mathProblems && mathProblems.length > 0) {
            // Solve each math problem and store the answer
            mathProblems.forEach(problem => {
                let answer = eval(problem); // Evaluate the math expression
                answers.push({ problem: problem, answer: answer }); // Store problem and answer
            });
        }
    } catch (error) {
        console.error('Error occurred while scanning and solving math problems:', error);
    }

    return answers; // Return the array of answers
}

// For testing purposes, a hardcoded string containing some math problems
let screenContent = "2 + 2\n3 * 5\n10 / 2";

// Call the function to scan and solve math problems silently
let answers = scanAndSolveMathProblems(screenContent);

// Output the answers (optional)
console.log('Answers:', answers);
