let isActivated = false;

function activateScanner() {
    isActivated = true;
    console.log('Screen scanning activated.');
    // Implement screen scanning logic here
}

function deactivateScanner() {
    isActivated = false;
    console.log('Screen scanning deactivated.');
    // Implement screen scanning deactivation logic here
}

// Function to process user input
function processInput(input) {
    input = input.trim().toLowerCase();
    if (input === 'activate') {
        activateScanner();
    } else if (input === 'deactivate') {
        deactivateScanner();
    } else {
        console.log('Invalid command. Please enter "activate" or "deactivate".');
    }
}

// Function to listen for user input
function listenForInput() {
    let input = prompt('Enter "activate" to activate scanner, or "deactivate" to deactivate:');
    if (input) {
        processInput(input);
    } else {
        console.log('No input received.');
    }
}

// Call listenForInput to start listening for user input
listenForInput();
