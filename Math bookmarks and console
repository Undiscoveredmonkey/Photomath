// Function to evaluate math expressions
function calculateMathExpression(expression) {
    try {
        return eval(expression);
    } catch (error) {
        return "Invalid expression";
    }
}

// Function to read input and calculate result
function readAndCalculate() {
    let expression = prompt("Enter a math expression:");
    let result = calculateMathExpression(expression);
    console.log("Result:", result);
}

// Call readAndCalculate to prompt user input
readAndCalculate();
