// Function to evaluate math expressions
function calculateMathExpression(expression) {
    try {
        return eval(expression);
    } catch (error) {
        return "Invalid expression";
    }
}

// Function to read input and calculate result
function readAndCalculate() {
    let expression = prompt("Enter a math expression:");
    let result = calculateMathExpression(expression);
    console.log("Result:", result);
}

// Function to activate the calculator
function activateCalculator() {
    console.log("Calculator activated.");
    console.log("You can now input math expressions.");
    readAndCalculate();
}

// Function to deactivate the calculator
function deactivateCalculator() {
    console.log("Calculator deactivated.");
}

// Activate and deactivate buttons
function activateButton() {
    activateCalculator();
}

function deactivateButton() {
    deactivateCalculator();
}

// Usage example:
// To activate: activateButton()
// To input a math expression: readAndCalculate()
// To deactivate: deactivateButton()
