// Function to activate the scanner
function activateScanner() {
    isActivated = true;
    console.log('Screen scanning activated for math problems.');
    scanAndSolveMathProblems(); // Call the function to scan and solve math problems
}

// Function to deactivate the scanner
function deactivateScanner() {
    isActivated = false;
    console.log('Screen scanning deactivated.');
}

// Call activateScanner() to start scanning
activateScanner();

// Call deactivateScanner() to stop scanning
deactivateScanner();
